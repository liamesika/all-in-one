{
  "build": {
    "env": {
      "NEXT_DISABLE_SWC_TOOLS_PATCHING": "1",
      "SKIP_ENV_VALIDATION": "true",
      "npm_config_target_platform": "",
      "npm_config_target_arch": "",
      "npm_config_target_libc": "",
      "npm_config_cache": "false"
    }
  },
  "installCommand": "rm -f package-lock.json && npm install --force --no-optional --ignore-platform",
  "buildCommand": "cd apps/web && NEXT_DISABLE_SWC_TOOLS_PATCHING=1 npm run build",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "functions": {
    "apps/web/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
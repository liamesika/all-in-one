{
  "name": "mvp-base",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "prisma:generate": "prisma generate --schema packages/server/db/prisma/schema.prisma",
    "vercel-install": "npm install --force --no-optional"
  },
  "devDependencies": {
    "@types/caseless": "^0.12.5",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.14.11",
    "prettier": "^3.3.3",
    "prisma": "6.16.1",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4"
  },
  "overrides": {
    "openai": "5.16.0"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.16.1",
    "firebase": "^12.2.1"
  },
  "prisma": {
    "schema": "packages/server/db/prisma/schema.prisma"
  }
}

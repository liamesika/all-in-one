{
  "name": "web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate --schema ../../packages/server/db/prisma/schema.prisma",
    "diagnose:prisma": "node -e \"console.log('[DEBUG] @prisma/client resolved to:', require.resolve('@prisma/client'))\" && ls -la ../../node_modules/.prisma/client | head -10",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "postinstall": "prisma generate --schema ../../packages/server/db/prisma/schema.prisma || echo 'Prisma generate skipped'",
    "lint": "echo 'lint web'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:a11y": "jest --testPathPatterns=accessibility",
    "a11y:check": "node scripts/accessibility-check.cjs",
    "a11y:test": "npm run test:a11y && npm run a11y:check",
    "perf:build-size": "npm run build && node scripts/bundle-size-check.js",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "perf:test": "node scripts/performance-test.js",
    "perf:test:ci": "npm run build && npm run start & sleep 10 && npm run perf:test && kill %1",
    "logout": "node scripts/force-logout.cjs"
  },
  "prisma": {
    "schema": "../../packages/server/db/prisma/schema.prisma"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@axe-core/react": "^4.10.2",
    "@stripe/stripe-js": "^5.8.0",
    "@types/dompurify": "^3.2.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "canvg": "^4.0.3",
    "client-only": "^0.0.1",
    "dompurify": "^3.2.7",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.0.2",
    "html2canvas": "^1.4.1",
    "jest-axe": "^10.0.0",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.543.0",
    "openai": "^5.20.2",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-is": "^19.1.1",
    "recharts": "^2.12.0",
    "server-only": "^0.0.1",
    "stripe": "^17.6.0",
    "swr": "^2.3.6",
    "web-vitals": "^4.2.4",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@next/bundle-analyzer": "^15.5.2",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__core": "^7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/react-is": "^19",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.1.0",
    "critters": "^0.0.23",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lighthouse": "^12.0.0",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "prisma": "^6.16.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
       "@/*": ["./*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "node",
      "jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/register/RegisterForm"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}

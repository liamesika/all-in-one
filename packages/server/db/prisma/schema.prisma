//// ========= Models ========= ////

model Property {
  id       String  @id @default(cuid())
  ownerUid String
  name     String
  address  String?
  city     String?

  // ×—×©×•×‘: ×©×™×”×™×” ××¡×•×’ enum ×•×œ× String:
  status PropertyStatus @default(DRAFT)

  type       PropertyType? // ×× ×™×© ×œ×š ×›×‘×¨ Enum ×›×–×” â€“ ×”×©××™×¨×™; ×× ××™×Ÿ, ×–×” ×™×›×•×œ ×œ×”×™×•×ª ×’× String? ×œ×©×œ×‘ ×”-MVP
  photos     PropertyPhoto[]  @relation("PropertyToPhotos")
  leads      RealEstateLead[] @relation("PropertyToLeads")
  rooms      Int?
  size       Int?
  price      Int?
  slug       String?          @unique
  agentName  String?

model PropertyPhoto {
  id         String @id @default(cuid())
  url        String
  propertyId String

  // ğŸ”½ ×•×“× ×©×-×™×—×¡ ×¢×§×‘×™ + opposite relation ×§×™×™× ×‘-Property

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Health check document (for debug endpoint)
    match /health/{document=**} {
      allow read, write: if true;
    }

    // User profiles - users can only read/write their own data
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can create their own profile (only if it doesn't exist)
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && !exists(/databases/$(database)/documents/users/$(userId))
                    && request.resource.data.uid == userId
                    && request.resource.data.email is string
                    && request.resource.data.fullName is string
                    && request.resource.data.vertical in ['REAL_ESTATE', 'E_COMMERCE', 'LAW', 'PRODUCTION']
                    && request.resource.data.lang is string
                    && request.resource.data.createdAt is string
                    && request.resource.data.updatedAt is string;

      // Users can update their own profile (but cannot change uid, email, or createdAt)
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.uid == userId
                    && request.resource.data.email == resource.data.email
                    && request.resource.data.createdAt == resource.data.createdAt
                    && request.resource.data.updatedAt is string;

      // Profiles cannot be deleted
      allow delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
